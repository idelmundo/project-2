{{!-- wraping create pet form into nav card --}}
{{#> navigationCard }}

    <div class ="container">
<form class="needs-validation" id="addPetPost" novalidate>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationCustom01">Title</label>
      <input type="text" class="form-control" id="title" placeholder="Insert title" required>
      <div class="valid-feedback">
        You've created
      </div>
    </div>
    {{!-- dog selection  --}}
    <div class="col-md-6 mb-3">
      <label for="validationCustom04">Pet</label>
      <select class="custom-select" id="pet" required>
        <option selected disabled value="">Choose...</option>

        {{!-- handlebars loop that will render pets from html-routes file /create-post route --}}
        {{#each pets}}
          <option value={{id}}>{{name}}</option>
        {{/each}}
      </select>
      <div class="invalid-feedback">
    
      </div>
    </div>
  </div>
  {{!-- Add Description --}}
  <div class="form-row">
      <div class="col-md-12 mb-3">
    <label for="notes">Add Description</label>
    <textarea class="form-control" id="description" rows="3"></textarea>
  </div>
  </div>
  <div class="form-row">
    <div class="col-md-3 mb-3">
    <button class="btn btn-secondary" id="upload">Upload a Picture</button>
  </div>
  </div>
  <button class="btn btn-primary" type="submit">Create Post</button>

</div>
{{/ navigationCard}}
{{!-- filestack link for img uploading --}}
<script src="//static.filestackapi.com/filestack-js/3.x.x/filestack.min.js"></script>
<script type="text/javascript" src="/js/createpost.js"></script>